---
const providers = [
  {
    name: "Railway",
    slug: "railway",
    logo: "/railway-light.svg",
    category: "SANDBOXES",
    description: "Railway is a singular platform to deploy your sandbox infrastructure so you don't have to deal with configuration, while allowing you to scale it."
  },
  {
    name: "E2B",
    slug: "e2b",
    logo: "/E2B-logo-light.svg",
    category: "SANDBOXES",
    description: "E2B is a cloud platform for running AI-generated code in secure sandboxes. Fast-spinning, isolated environments purpose-built for LLM applications."
  },
  {
    name: "Modal",
    slug: "modal",
    logo: "/modal-logo-light.svg",
    category: "SANDBOXES",
    description: "Modal is a serverless cloud platform for running compute-intensive Python code. Instant container spin-up with GPU support for ML inference and data processing."
  },
  {
    name: "Namespace",
    slug: "namespace",
    logo: "/namespace-logo-light.svg",
    category: "SANDBOXES",
    description: "Namespace is a cloud compute platform providing ephemeral container instances. Create isolated sandbox environments without managing infrastructure."
  },
  {
    name: "Vercel",
    slug: "vercel",
    logo: "/Vercel_Logo_L.svg",
    category: "SANDBOXES",
    description: "Vercel Sandbox is a secure code execution environment built for AI applications. Isolated containers with built-in support for web technologies."
  },
  {
    name: "Blaxel",
    slug: "blaxel",
    logo: "/blaxel-logo-light.svg",
    category: "SANDBOXES",
    description: "Blaxel is a serverless compute platform designed for AI workloads. On-demand GPU and CPU resources with automatic scaling."
  },
  {
    name: "Daytona",
    slug: "daytona",
    logo: "/daytona-logo-light.svg",
    category: "SANDBOXES",
    description: "Daytona is an open-source development environment manager that creates standardized, reproducible dev environments on any infrastructure."
  },
  {
    name: "CodeSandbox",
    slug: "codesandbox",
    logo: "/codesandbox-logo-light.svg",
    category: "SANDBOXES",
    description: "CodeSandbox is a cloud development platform that enables instant, collaborative coding environments for web development with modern frameworks."
  },
    {
    name: "Runloop",
    slug: "runloop",
    logo: "/runloop-logo-light.svg",
    category: "SANDBOXES",
    description: "Runloop is a cloud platform for running secure, isolated development environments for AI coding agents and developers."
  },
];
---

<div class="py-16">
  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white uppercase mb-4">
        Providers
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        ComputeSDK's provider ecosystem. Use the top platforms to create secure sandboxes with one API.
      </p>
    </div>

    <!-- Provider Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
      {providers.map((provider) => (
        <a
          href={`/providers/${provider.slug}`}
          class="group bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:border-emerald-500 dark:hover:border-emerald-500 transition-all duration-200 hover:shadow-lg no-underline"
        >
          <!-- Logo -->
          <div class="h-12 flex items-center mb-4">
            <img
              src={provider.logo}
              alt={`${provider.name} logo`}
              width="50%"
              class="object-contain dark:invert"
            />
          </div>

          <!-- Category Badge -->
          <span class="inline-block px-2 py-1 text-xs font-semibold bg-emerald-100 dark:bg-emerald-900 text-emerald-800 dark:text-emerald-200 rounded mb-3">
            {provider.category}
          </span>

          <!-- Provider Name -->
          <h2 class="text-lg font-bold text-gray-900 dark:text-white uppercase mb-2 group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors">
            {provider.name}
          </h2>

          <!-- Description -->
          <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-3">
            {provider.description}
          </p>

          <!-- Links -->
          <div class="mt-4 flex items-center gap-3">
            <span class="inline-flex items-center gap-1 text-xs text-gray-500 dark:text-gray-400">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Docs
            </span>
          </div>
        </a>
      ))}
    </div>

    <!-- Provider CTA -->
    <div class="mx-auto mt-16 max-w-2xl text-center">
      <p class="text-gray-600 dark:text-gray-400 mb-6">
        For infrastructure providers: Want to offer best-in-class sandbox features to your users?
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 rounded-md bg-emerald-600 dark:bg-emerald-500 px-6 py-3 text-base font-semibold text-white hover:bg-emerald-500 dark:hover:bg-emerald-400 transition-colors no-underline"
      >
        Get in Touch
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </div>
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
